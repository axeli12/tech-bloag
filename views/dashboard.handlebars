<div class="row">
    <div class="col-auto">
        <h2>Welcome To Your Dashboard, {{name}}!</h2>

    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blog Post</h3>

        <form class="form new-blog-form">
            <div class="form-group">
                <label for="title"> Title of New Post</label>
                <input class="form-input" type="text" id="title" name="title" />

            </div>
            <div class="form-group">
                <label for="description">Description of New Post:</label>
                <textarea class="form-input" id="description" name="description"></textarea>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Post</button>

            </div>

        </form>

    </div>

    {{#if blogPosts.length}}
    <div class="col-md-6 blogList">
        <h3>Current Blog</h3>

        {{#each blogPosts as |blog|}}
        <div class="row mb-2">
            <div class="col-mb-8">
                <h4><a href="/blog/{{blog.id}}">{{blog.name}}</a></h4>

            </div>

            <div class="col-mb-4">
                <button class="btn btn-sm btn-secondary" data-id="{{blog.id}}">Remove blog</button>

            </div>
        
        </div>
        {{/each}}
    </div>
    {{/if}}


</div>